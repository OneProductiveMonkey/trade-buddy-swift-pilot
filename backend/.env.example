
# OPM MoneyMaker Trading Bot - Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=true

# Trading Configuration
DEFAULT_BALANCE=10000.0
MIN_TRADE_AMOUNT=100.0
MAX_TRADE_AMOUNT=1000.0
DEFAULT_RISK_LEVEL=medium

# Exchange API Keys (Optional - bot works in demo mode without these)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here

# Database Configuration
DATABASE_URL=sqlite:///trading_bot.db
TRADES_DB_PATH=trades.db

# Strategy Configuration
AI_MIN_CONFIDENCE=60.0
ARBITRAGE_MIN_PROFIT=0.3
AUTO_MODE_ENABLED=true

# Rate Limiting
API_RATE_LIMIT=100
PRICE_UPDATE_INTERVAL=5
STRATEGY_RUN_INTERVAL=15

# Meme Radar Configuration
MEME_RADAR_ENABLED=true
MEME_MAX_MARKET_CAP=100000000
MEME_MIN_VOLUME=1000000
MEME_CACHE_DURATION=120

# Wallet Configuration
METAMASK_NETWORK=mainnet
PHANTOM_NETWORK=mainnet-beta
WALLET_TESTNET_MODE=true

# Notification Configuration
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=10
MAX_NOTIFICATION_HISTORY=100

# Auto Mode Configuration
AUTO_VOLATILITY_THRESHOLD=0.6
AUTO_SPREAD_THRESHOLD=0.5
AUTO_CONFIDENCE_MIN=70.0

# Trade Replay Configuration
REPLAY_MAX_TRADES=100
REPLAY_METRICS_DAYS=7
